{
	"$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noAssignInExpressions": "off"
			},
			"style": {
				"noCommaOperator": "off",
				"useSingleVarDeclarator": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "single",
			"jsxQuoteStyle": "double",
			"trailingCommas": "all",
			"semicolons": "asNeeded",
			"indentStyle": "space",
			"indentWidth": 4,
			"lineWidth": 100,
			"quoteProperties": "asNeeded"
		}
	}
}
